rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // USERS
    // Users can read their own profile.
    // Users can create their own profile upon signup.
    // Users can update their own profile.
    match /users/{userId} {
      allow read, update: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn();
    }

    // PRODUCTS
    // Any signed-in user can read products.
    // Only admins can write products.
    match /products/{productId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // ORDERS
    // Admins can read all orders.
    // Users can only create orders for themselves.
    match /orders/{orderId} {
      allow read: if isAdmin();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    // USER-SPECIFIC ORDERS
    // Users can read and create their own orders.
    match /users/{userId}/orders/{orderId} {
        allow read, create: if isOwner(userId);
    }
  }
}
