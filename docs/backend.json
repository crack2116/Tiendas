{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "address": {
          "type": "string",
          "description": "The user's shipping address."
        },
        "role": {
          "type": "string",
          "description": "The user's role.",
          "enum": ["admin", "customer"]
        }
      },
      "required": ["uid", "email", "role"]
    },
    "Product": {
      "title": "Product",
      "description": "Represents a product in the store.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the product."
        },
        "slug": {
          "type": "string",
          "description": "A URL-friendly version of the product name."
        },
        "category": {
          "type": "string",
          "description": "The category the product belongs to."
        },
        "price": {
          "type": "number",
          "description": "The price of the product."
        },
        "originalPrice": {
          "type": "number",
          "description": "The original price before a discount."
        },
        "description": {
          "type": "string",
          "description": "A detailed description of the product."
        },
        "badge": {
          "type": "string",
          "description": "A badge to display on the product card (e.g., 'New', 'Sale')."
        },
        "details": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "A list of product details."
        },
        "images": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "url": { "type": "string", "format": "uri" },
              "alt": { "type": "string" },
              "hint": { "type": "string" }
            },
            "required": ["id", "url", "alt"]
          },
          "description": "A list of images for the product."
        }
      },
      "required": ["name", "slug", "price", "description", "images"]
    },
    "Order": {
      "title": "Order",
      "description": "Represents a customer's order.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user who placed the order."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the order was created."
        },
        "status": {
          "type": "string",
          "enum": ["Procesando", "Enviado", "Entregado", "Cancelado"],
          "description": "The current status of the order."
        },
        "total": {
          "type": "number",
          "description": "The total amount of the order."
        },
        "items": {
          "type": "array",
          "description": "The items included in the order.",
          "items": {
            "type": "object",
            "properties": {
              "productId": { "type": "string" },
              "productName": { "type": "string" },
              "quantity": { "type": "number" },
              "price": { "type": "number" },
              "imageUrl": { "type": "string", "format": "uri" }
            },
            "required": ["productId", "productName", "quantity", "price", "imageUrl"]
          }
        }
      },
      "required": ["userId", "createdAt", "status", "total", "items"]
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public information about a user."
    },
    "/products/{productId}": {
      "schema": {
        "$ref": "#/entities/Product"
      },
      "description": "Stores all the products available in the store."
    },
    "/orders/{orderId}": {
        "schema": { "$ref": "#/entities/Order" },
        "description": "Stores all orders for administrative purposes."
    },
    "/users/{userId}/orders/{orderId}": {
        "schema": { "$ref": "#/entities/Order" },
        "description": "Stores a user's specific orders."
    }
  }
}
